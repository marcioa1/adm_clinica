%p
  Cheques utilizados 
  %br
  %table{:cellpadding=>3, :cellspacing=>0, :border=>1}
    %tr{:style=>'background-color: #455A79; color: white;'}
      - if @clinica_atual.administracao?
        %td Clínica
      %th{:width=>"220px"}Paciente
      %th{:width=>"90px"}Valor
      %th{:width=>"120px"}Banco
      %th Número
      %th Bom para
    - pagamento.cheques.each() do |cheque|
      %tr{:id=>"tr_"+ cheque.id.to_s}
        - if @clinica_atual.administracao?
          %td= cheque.clinica.sigla
        %td= cheque.nome_dos_pacientes 
        %td{:align=>"right"}= cheque.valor.real 
        %td= cheque.banco.numero.to_s + "-" + cheque.banco.nome if cheque.banco
        %td= cheque.numero 
        %td= cheque.bom_para.to_s_br
