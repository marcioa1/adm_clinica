<% content_for :main do %>
<fieldset class='fieldset_55'>
<legend>Novo tratamento</legend>
<% if @tratamento.paciente.tabela %>
  <%= render :partial => 'form' %>
<% else %>
  Este paciente n√£o tem tabela associada
<% end %>
</fieldset>
<%= link_to "voltar", abre_paciente_path(:id=>@tratamento.paciente_id) %>
<style type='text/css'>
    .ui-autocomplete {
      max-height: 180px;
      overflow-y: auto;
    }
</style>
<script type="text/javascript">
  $(function() {
    $("#tratamento_descricao").autocomplete({
      source: <%= @itens %>,
      minLength: 2,
      maxRows: 5,
      select: function(event,ui){
        console.log(ui.item.value)
        console.log(ui.item.id)
        $("#tratamento_item_tabela_id").val(ui.item.value);
        $("#codigo").val(ui.item.label.split(" - ")[0]);
        selecionou_item_tabela(ui.item.value);
        return false;
      },
      focus: function(e,ui){
        return false;
      }
    });
  });
    
</script>
<% end %>